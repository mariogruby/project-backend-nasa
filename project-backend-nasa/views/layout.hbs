<body>
  <video autoplay muted loop id="bg-video"
    style="position: fixed; right: 0; bottom: 0; min-width: 100%; min-height: 100%; width: auto; height: auto; z-index: -1;">
    <source
      src="/images/background-nasa.mp4"
      type="video/mp4">
  </video>
  <nav class="navbar sticky-top navbar-expand-lg navbar-dark p-3"
    style="background-color: rgba(0, 0, 0, 0.3); backdrop-filter: blur(10px);">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">NASA FORUM</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavDropdown"
        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class=" collapse navbar-collapse" id="navbarNavDropdown">
        <ul class="navbar-nav ms-auto ">
          {{#if currentUser}}
          {{!-- If a user is logged in, show other navigation links --}}
          <li class="nav-item">
            <a class="nav-link mx-2 activate" aria-current="page" href="/news"></a>
          </li>
          {{else}}
          {{!-- If no user is logged in, show the MAIN link --}}
          <li class="nav-item">
            <a class="nav-link mx-2 activate" aria-current="page" href="/">MAIN</a>
          </li>
          {{/if}}
          <li class="nav-item">
            <a class="nav-link mx-2" href="/news">NEWS</a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link mx-2 dropdown-toggle" href="#" id="navbarDropdownMenuLink" role="button"
              data-bs-toggle="dropdown" aria-expanded="false">AUTH
            </a>
            <ul class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
              {{#if currentUser}}
              <li><a class="dropdown-item" id="off-Signup" href="/auth/signup"></a></li>
              {{else}}
              <li><a class="dropdown-item" id="off-Signup" href="/auth/signup">SIGN UP</a></li>
              {{/if}}
              {{#if currentUser}}
              <li><a class="dropdown-item" id="quitLogin" href="/auth/login"></a></li>
              {{else}}
              <li><a class="dropdown-item" id="quitLogin" href="/auth/login">LOGIN</a></li>
              {{/if}}
              <li><a class="dropdown-item" href="/auth/logout">LOG OUT</a></li>
              {{!-- <li>
                <hr class="dropdown-divider">
              </li> --}}
              <li>
                {{!-- <a class="dropdown-item" href="/auth/user/{{user._id}}">PROFILE</a> --}}
                <a class="dropdown-item" href="/auth/profile/">PROFILE</a>
              </li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </nav>
