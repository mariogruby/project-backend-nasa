<h2>Profile</h2>


<div>
    <h3> {{user.username}}</h3>
    <h4>Email:{{user.email}}</h4>
    <h4>Comments:</h4>
        {{#each comments}}
            <div>

                <p>News: {{news.title}}</p>
                <p>Date: {{date}}</p>
                <p>Message: {{contenido}}</p>
            </div>
        {{/each}}
</div>


<a href="{{user._id}}/edit">Editar Profile</a>
